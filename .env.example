# Freeman Firms - Environment Configuration
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=https://freeman-assets.onrender.com
NEXT_PUBLIC_API_TIMEOUT=30000

# Application Configuration
NEXT_PUBLIC_APP_NAME=Freeman Firms
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_TWO_FACTOR=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Security Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=300

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC

# Development Configuration (development only)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_API_LOGGING=true

# Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_HOTJAR_ID=

# Social Login (optional)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=
# NEXT_PUBLIC_FACEBOOK_APP_ID=

# Email Configuration (server-side only)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Database Configuration (if needed)
# DATABASE_URL=

# JWT Configuration (server-side only)
# JWT_SECRET=
# JWT_REFRESH_SECRET=